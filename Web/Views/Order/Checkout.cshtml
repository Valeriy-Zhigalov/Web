@model Web.Models.Order

    <div class="con12">
        <div class="container12 text-center">
            @*<div class="row">*@
                <h3 class="text-white">Оформление заказа</h3>
                <form asp-controller="Order" asp-action="Checkout" method="post" enctype="multipart/form-data" class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="name"></label>
                        <div class="col-md-5 check">
                            <input asp-for="name" class="form-control1" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="surname"></label>
                        <div class="col-md-5 check">
                            <input asp-for="surname" class="form-control1" />
                            <span asp-validation-for="surname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="email"></label>
                        <div class="col-md-5 check">
                            <input asp-for="email" class="form-control1" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="adress"></label>
                        <div class="col-md-5 check">
                            <input asp-for="adress" class="form-control1" />
                            <span asp-validation-for="adress" class="text-danger"></span>
                        </div>
                    </div>
                    <input class="btn btn-success" type="submit" value="Завершить заказ" />
                </form>
            @*</div>*@
        </div>
    </div>