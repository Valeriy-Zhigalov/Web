@model IEnumerable<Web.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}
    <div class="con12">
        <div class="container12 text-center">
            <h2>Учётные записи пользователей</h2>
            <a class="btn btn-primary" asp-action="Create">Добавить пользователя</a>

            <table class="table">
                <tr><th class="text-white">Email</th><th></th></tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="text-white">@user.Email</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                                <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Удалить
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>